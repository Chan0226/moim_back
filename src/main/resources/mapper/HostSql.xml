<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.HostMapper">

    <!--  admin > hostList  -->
    <select id="getHostCount" resultType="int">
        select count(*) from host
    </select>

    <select id="getHostList" resultType="HostDto">
        select * from host order by num desc
    </select>

    <select id="getHostSearchList" parameterType="map" resultType="MemberDto">
        select * from host where companyName like concat('%'#{search}'%') or email like concat('%'#{search}'%')
    </select>

</mapper>
